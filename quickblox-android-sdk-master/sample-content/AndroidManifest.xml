<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quickblox.content"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <application android:label="@string/app_name">
        <activity
            android:name="com.quickblox.content.activities.SplashActivity"
            android:icon="@drawable/icon"
            android:label="Quick Blox Content Sample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GalleryActivity"
            android:icon="@drawable/icon"
            android:label="Gallery" />
        <activity
            android:name="com.quickblox.content.activities.ShowImgActivity"
            android:icon="@drawable/icon"
            android:label="Show image" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest> 
